<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.activity.ladyclass"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/translucent">
        <activity
            android:name="com.activity.ladyclass.LaunchActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.activity.ladyclass.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.activity.ladyclass.StuActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.activity.ladyclass.ContentActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.activity.ladyclass.ChoosePicActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:screenOrientation="portrait"/>
        <activity android:name="com.activity.ladyclass.AnswerActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.activity.ladyclass.SearchByActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.activity.ladyclass.NoteActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.activity.ladyclass.NavigationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.activity.ladyclass.HelpActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.activity.ladyclass.TeachActivity"
            android:screenOrientation="portrait"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/> 
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> 
     
</manifest>
