<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white" >

	<!-- 内容框 -->
    <LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
        android:background="@drawable/frame_bg_img">
        
    	<RelativeLayout
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" >

        	<TextView
            	android:id="@+id/tip1"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_alignParentLeft="true"
            	android:layout_centerVertical="true"
            	android:text=""
            	android:layout_marginLeft="10dp"
            	android:paddingLeft="21dp"
            	android:paddingRight="10dp"
            	android:paddingTop="18dp"
            	android:paddingBottom="29dp"
            	android:textColor="@color/black"
            	android:textSize="17sp" 
            	android:background="@drawable/congratulate_or_frame"/>
        	
        	<ImageView
        	    android:id="@+id/image_view"
        	    android:layout_marginLeft="25dp"
        	    android:layout_toRightOf="@+id/tip1"
        	    android:layout_alignParentRight="true"
        	    android:layout_marginRight="30dp"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"/>
        	    
    	</RelativeLayout>

    	<RelativeLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content">

        	<TextView 
        	    style="@style/strings"
        	    android:id="@+id/tip2"
        	    android:paddingLeft="22dp"
        	    android:layout_gravity="center_horizontal"
        	    android:textSize="18sp"/>
        
    	</RelativeLayout>
    	
    </LinearLayout>
    <!-- 按钮部分 -->
    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="13dp"
        android:paddingLeft="29dp"
        android:paddingRight="29dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_bg_img" >
		
        <Button
            style="@style/realbutton"
            android:layout_width="wrap_content"
            android:id="@+id/to_see_btn"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/to_see_answer"/>

    </LinearLayout>

</LinearLayout>